{
  "name": "use-pouchdb",
  "version": "1.0.0",
  "description": "React Hooks for PouchDB",
  "main": "lib/index.js",
  "jsnext:main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "test": "jest --watch",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "textlint": "textlint README.md docs/*",
    "update-coc": "weallbehave -o . && git add CODE_OF_CONDUCT.md && git commit -m 'docs(coc): updated CODE_OF_CONDUCT.md'",
    "update-contrib": "weallcontribute -o . && git add CONTRIBUTING.md && git commit -m 'docs(contributing): updated CONTRIBUTING.md'"
  },
  "keywords": [
    "react",
    "hooks",
    "pouchdb",
    "couchdb"
  ],
  "author": {
    "name": "Christopher Astfalk",
    "email": "christopher.astfalk@icloud.com",
    "url": "http://christopher-astfalk.de/"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Terreii/use-pouchdb.git"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^25.2.3",
    "@types/pouchdb-adapter-memory": "^6.1.3",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "babel-jest": "^26.0.1",
    "eslint": "^7.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "pouchdb-adapter-memory": "^7.2.1",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1",
    "react-test-renderer": "^16.13.1",
    "textlint": "^11.6.3",
    "textlint-rule-alex": "^1.3.1",
    "textlint-rule-common-misspellings": "^1.0.1",
    "typescript": "^3.9.3",
    "weallbehave": "^1.2.0",
    "weallcontribute": "^1.0.9"
  },
  "dependencies": {
    "@types/pouchdb-core": "^7.0.6",
    "@types/pouchdb-mapreduce": "^6.1.4",
    "@types/react": "^16.9.35",
    "pouchdb-core": "^7.2.1",
    "pouchdb-errors": "^7.2.1",
    "pouchdb-mapreduce": "^7.2.1",
    "pouchdb-utils": "^7.2.1",
    "react": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true
  }
}
